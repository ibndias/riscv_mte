    "version": "0.2.0",
    "configurations": [

        {
            "type": "gdb",
            "request": "attach",
            "name": "Attach to QEMU gdbserver",
            "executable": "./build/tests/derry",
            "target": ":1234",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText",
            "gdbpath": "riscv64-unknown-elf-gdb",
            "preLaunchTask": "run-qemu",
            
            "autorun": [
                "break main"
            ]
        }
        
    ]
}